<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/review_dialog_view">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_dialog_author"
    android:text="@string/author_label"
    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.026"
    app:layout_constraintVertical_bias="0.016"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:textStyle="bold"/>

    <TextView
        android:layout_width="329dp"
        android:layout_height="20dp"
        android:id="@+id/layout_dialog_content"
        android:text="@string/content_label"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialog_author"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/layout_dialog_author"
        app:layout_constraintHorizontal_bias="0.105" />

</android.support.constraint.ConstraintLayout>